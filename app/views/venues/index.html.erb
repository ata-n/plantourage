<h2>Listing venues for <%= @plan.name %></h2>

<table>
  <tr>
    <th>Name</th>
    <th>Website</th>
    <th>Address</th>
    <th>Image</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @venues.each do |venue| %>
  <tr>
    <td><%= venue.name %></td>
    <td><%= venue.website %></td>
    <td><%= venue.address %></td>
    <td><%= venue.image %></td>
    <td><%= link_to 'Show', venue %></td>
    <td><%= link_to 'Select', edit_venue_path(venue) %></td>
    <td><%= link_to 'Destroy', venue, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

